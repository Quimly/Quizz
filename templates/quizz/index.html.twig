{% extends 'base.html.twig' %}

{% block title %}Crée ton Quizz!{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block javascripts %}
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}

	<div class="form_wrap">

        {{ form_start(form, {'attr': {'class': 'form_main', 'autocomplete': 'off' }}) }}
    
            {{ form_row(form.title, {'label': 'Intitulé'}) }}
            {{ form_row(form.description, {'label': 'Description'}) }}
            {{ form_row(form.image.file, {'label': 'Image'}) }}
    
            <button type="submit" class="btn btn-primary">Créer!</button>
    
        {{ form_end(form) }}

    </div>

{% endblock %}
