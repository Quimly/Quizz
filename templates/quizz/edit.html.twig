{% extends 'base.html.twig' %}

{% block body %}

    <h2>{{ quizz.title }}</h2>
    <p>Status:
        {% if quizz.published %} 
    		publié
    	{% else %}
    		Non publié
    	{% endif %}
    </p>
    <p>Description:
        {% if quizz.description is not null %}
            {{ quizz.description }}
        {% else %}
        	Aucune description
        {% endif %}
    </p>
    <p>Image:
        {% if quizz.image is not null %}
            <img src="{{ asset('img/quizz/' ~ quizz.image.url) }}" alt="{% if quizz.image.alt is not null %} {{ quizz.image.alt }}{% else %} Aucune description d'image{% endif %}" />
        {% else %}
        	Aucune image
        {% endif %}
    </p>
{% endblock %}
