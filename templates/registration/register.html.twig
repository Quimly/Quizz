{% extends 'base.html.twig' %}

{% block body %}

    <div class="form_wrap">

    {{ form_start(form, {'attr': {'class': 'form_main' }}) }}

        {{ form_row(form.username, {'label': 'Pseudo'}) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword.first, {'label': 'Mot de passe'}) }}
        {{ form_row(form.plainPassword.second, {'label': 'Confirmation'}) }}

        <button type="submit">Inscription !</button>

    {{ form_end(form) }}

    </div>

{% endblock %}



