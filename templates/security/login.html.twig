{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link href="{{ asset('build/asset/login/login.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

    <div class="form-wrap">

        <form action="{{ path('login') }}" method="post" class="form_main">
            {% if error %}
                <div id="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            
                <div class="form-group">
                	<td><label for="username">Pseudo</label></td>
                    <td><input class = "form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Pseudo" /></td>
                </div>
    
                <div class="form-group">
                	<td><label for="password">Mot de passe</label></td>
                    <td><input class = "form-control" type="password" id="password" name="_password" placeholder="Mot de passe" /></td>
                </div>

                <button class="btn btn-primary" type="submit">Connexion</button>
           

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            
        </form>
        <p><a href="{{ path('registration')}}">Je m'inscris!</a></p>

    </div>
    
    

{% endblock %}